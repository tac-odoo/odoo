<?xml version="1.0"?>
<openerp>
    <data>

        <record id="res_company_form_cst_exise_vat" model="ir.ui.view">
            <field name="name">res.company.form.cst.exise.vat</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//notebook" position="before">
                    <group string="Parameters">
                        <group>
                            <field name="cst_no"/>
                            <field name="cst_date"/>
                            <field name="vat_no"/>
                            <field name="vat_date"/>
                        </group>
                        <group>
                            <field name="excise_no"/>
                            <field name="excise_date"/>
                            <field name="range"/>
                            <field name="division"/>
                        </group>
                    </group>
                 </xpath>
            </field>
        </record>

    </data>
</openerp>
