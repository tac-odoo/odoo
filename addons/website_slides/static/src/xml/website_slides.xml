<templates id="template" xml:space="preserve">
    <t t-name="website.slide.dialog">
        <div class="modal" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                        <h3 class="modal-title">Upload Presentation</h3>
                    </div>
                    <div class="modal-body">
                        <form class="clearfix form-horizontal">
                            <div class="control-group">
                                <div class="controls col-sm-4 input-group-sm" style="padding: 0px;;">
                                    <span class="oe-presentation-image-thumbnail" style="max-height: 166px;border: 1px solid #ccc;">
                                        <img src="/website_slides/static/src/img/document.png"  id="slide-image" title="Content Preview" class="img-responsive" />
                                    </span>
                                </div>
                                <div class="controls col-sm-8 input-group-sm" style="padding-right: 0px;">
                                    <ul class="list-group">
                                        <li class="list-group-item active">
                                            <h5 class="list-group-item-heading">
                                                <label for="file" class="control-label">
                                                    PDF or Image File
                                                </label>
                                            </h5>
                                            <input id="slide-file" name="file" accept="image/*,application/pdf" class="slide-upload" type="file"/>
                                        </li>
                                        <li class="list-group-item">
                                            <h5 class="list-group-item-heading">
                                                <label for="slide-url" class="control-label">
                                                    Youtube URL
                                                </label>
                                            </h5>
                                            <input class="form-control h5 slide-url" placeholder="Youtube Video URL" id="url"/>
                                            <p class="url-error" style="display:none"> Wrong input. Please enter valid youtube URL</p>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="control-group">
                                <input name="slide-name" placeholder="Title" class="form-control" required="required" id="name"/>
                                <!--<div class="col-sm-9">-->
                                    <!--</div>-->
                            </div>

                            <div class="control-group">
                                <br/>
                                <input type="text" name="slide-tags" style="width: 200px" placeholder="Tags" class="form-control slide-tags"/>

                                <!--<div class="controls col-sm-9">-->
                                    <!--</div>-->
                            </div>
                            <div class="control-group">
                                <br/>
                                <textarea id="description"  placeholder="Description" class="form-control"  maxlength="150"></textarea>

                                <!--<div class="controls col-sm-9">-->
                                    <!--</div>-->
                            </div>

                            <canvas id="the-canvas" style="display: none;"></canvas>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" data-loading-text="Loading..." class="btn btn-primary save">Save as Draft</button>
                        <button type="button" data-loading-text="Loading..." data-published="true" class="btn btn-primary save">Save and Publish</button>
                        or
                        <a href="#" data-dismiss="modal" aria-hidden="true">Discard</a>
                    </div>
                </div>
            </div>
        </div>
    </t>


    <t t-name="website.slide.overlay">
        <div class="slide-overlay">
        
        </div>
    </t>
    <t t-name="website.slide.PDFViewer">
        <div>
        <div id="PDFLoader" class="img-responsive" style="width:100%;"><h3><i class='fa fa-spinner fa-spin'></i> Loading presenation...  </h3></div>
        <div class="slide-wrapper">
            <canvas id="PDFViewer" class="img-responsive"></canvas>
        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-3 text-left">
                    <input type="number" style="width: 45px;border: 1px solid #ddd;text-align: center;" id="page_number"></input> / <span id="page_count"></span>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6 text-center">
                    <a id="first" role="button"><i class="fa fa-step-backward fa-2x"></i></a>
                    <a id="previous" role="button"><i class="fa fa-arrow-circle-left fa-2x"></i></a>
                    <a id="next" role="button"><i class="fa fa-arrow-circle-right fa-2x"></i></a>
                    <a id="last" role="button"><i class="fa fa-step-forward fa-2x"></i></a>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-3 text-right">
                    <a id="fullscreen"><i class="fa fa-arrows-alt fa-2x"></i></a>
                </div>
            </div>
        </div>
      </div>
    </t>

</templates>
