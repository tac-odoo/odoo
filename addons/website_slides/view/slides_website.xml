<?xml version="1.0" ?>
<openerp>
    <data>

        <!-- add link to the standard footer -->
        <template id="slide_footer" inherit_id="website.footer_default"
            name="Footer Slides Link">
            <xpath expr="//div[@id='info']//ul[@class='list-unstyled']" position="inside">
                <li>
                    <a href="/channel">Presentations</a>
                </li>
                <li>
                    <a href="/channel">Videos</a>
                </li>
            </xpath>
        </template>

        <!-- header template to add scripts to all pages -->
        <template id="head" name="slides">
            <link href="/website_slides/static/src/css/website_slides.css" rel="stylesheet"/>
            <script type="text/javascript" src="/website_slides/static/src/js/slides.js"></script>
        </template>

        <!-- search box -->
        <template id="search" name="search">
            <form t-attf-action="/channel/#{slug(channel)}" role="search" method="get">
                <div class="input-group">
                    <input type="text" class="form-control" name="search" placeholder="Search Slides..." t-att-value="search" style="border-radius: 0px;"/>
                    <span class="input-group-btn">
                        <button class="btn btn-primary" type="submit" style="border-radius: 0px;">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>
                </div>
            </form>
        </template>

        <template id='pdfview' name="pdfview">
            <div class="panel panel-default" style="border-radius: 0px;">
                <div class="panel-heading">
                    <a class="toggleSlideOption" href="javascript:void(0);" data-slide-option-toggle-id="#slide_share"><span class="glyphicon glyphicon-share-alt"></span> Share</a>
                </div>
                <div id="pdf_container" class="panel-body" style="position: relative;padding:0px;">
                    <div id="slide_share" class="slide-option-toggle">
                        <t t-call="website_slides.slide_share"/>
                    </div>
                    <t t-if="slide.slide_type == 'infographic'">
                        <img t-attf-src="/slides/thumb/#{slide.id}" class="img-responsive"/>
                    </t>
                    <t t-if="slide.slide_type in ('presentation', 'document')">
                        <canvas id="pdfcanvas" class="img-responsive" style="width:100%;"></canvas>
                        <div id="pdf_loader_status" style="display:none;">
                            <i class="fa fa-spinner fa-spin fa-3x"></i>
                        </div>
                    </t>
                </div>
                <div class="panel-footer" t-if="slide.slide_type != 'infographic'">
                    <div class="row">
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-3 text-left">
                            <span><span id="page_num"></span> / <span id="page_count"></span></span>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6 text-center">
                            <a id="firstpage" href="javascript:void(0);" role="button"><span class="glyphicon glyphicon-step-backward"></span></a>
                            <a id="prev" href="javascript:void(0);" role="button"><span class="glyphicon glyphicon-chevron-left"></span></a>
                            <a id="next" href="javascript:void(0);" role="button"><span class="glyphicon glyphicon-chevron-right"></span></a>
                            <a id="lastpage" href="javascript:void(0);" role="button"><span class="glyphicon glyphicon-step-forward"></span></a>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-3 text-right">
                            <a id="fullscreen" href="javascript:void(0);"><span class="glyphicon glyphicon-fullscreen"></span></a>
                        </div>
                    </div>
                </div>
            </div>
            <input id="pdf_file" name="pdf_file" type="hidden" t-att-value="pdf_file"/>
        </template>

        <template id='slide_share' name="slide_share">
            <h3>Share Slide</h3>
            <div class="form-group oe_share">
                <a target="_Blank" class="oe_share_facebook" href="https://www.facebook.com/sharer/sharer.php?u={url}"><i class="fa fa-facebook-square fa-2x"></i></a>
                <a target="_Blank" class="oe_share_twitter" href="https://twitter.com/intent/tweet?text={title}&amp;url={url}"><i class="fa fa-twitter-square fa-2x"></i></a>
                <a target="_Blank" class="oe_share_linkedin" href="http://www.linkedin.com/shareArticle?mini=true&amp;url={url}&amp;title={title}&amp;"><i class="fa fa-linkedin-square fa-2x"></i></a>
                <a target="_Blank" class="oe_share_google" href="https://plus.google.com/share?url={url}"><i class="fa fa-google-plus-square fa-2x"></i></a>
                <a href="mailto:?body={url}&amp;subject={title}"><i class="fa fa-envelope-o fa-2x"></i></a>
            </div>
            <div class="form-group">
                <label>Link</label>
                <input type="text" class="form-control" t-att-value="slide._get_share_url(slide)" readonly="readonly" onClick="this.select();"/>
            </div>
            <t t-if="slide.slide_type in ('presentation', 'document')">
            <div class="form-group">
                <label>Embed</label>
                <textarea id="slide_embed_code" class="form-control" readonly="readonly" onClick="this.select();"><t t-esc="slide._get_embade_code(slide)"/></textarea>
            </div>
            <div class="form-group">
                <div class="input-group col-lg-3 col-md-3 col-sm-6 col-xs-6">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button" id="btnminus" field="page"><span class="glyphicon glyphicon-minus-sign"/></button>
                    </span>
                    <input type="text" class="form-control text-center" value="1" name="page" readonly="readonly"/>
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button" id="btnplus" field="page"><span class="glyphicon glyphicon-plus-sign"/></button>
                    </span>
                </div>
                <input type="hidden" id="pdf_page_count" value=""/>
                <span class="help-block"> Enter start page</span>
            </div>
            </t>
        </template>

        <template id='videoview' name="Video Viewer">
            <div class="row">
                <div class="panel panel-default" style="border-radius: 0px;">
                    <div class="panel-body" style="padding: 0px;">
                        <div class="embed-responsive embed-responsive-4by3 embed-responsive-item">
                             <iframe t-attf-src="//www.youtube.com/embed/#{famous.youtube_id}?theme=light"></iframe>
                         </div>
                    </div>
                </div>
            </div>
        </template>

        <!-- entry page of the slide application -->
        <template id='home' name="Odoo Slides">
            <t t-set="head">
                <t t-call="website_slides.head"/>
                <script type="text/javascript" src="/web/static/lib/jquery.textext/jquery.textext.js"/>
                <script type="text/javascript" src="/website_slides/static/src/js/website_slides.editor.js"></script>
                <link rel='stylesheet' href="/web/static/lib/jquery.textext/jquery.textext.css"/>

                <script type="text/javascript" src="/website_slides/static/lib/pdfjs/build/pdf.js"></script>
                <script type="text/javascript" src="/website_slides/static/src/js/pdfviewer.js"></script>
            </t>
            <t t-call="website.layout">
                <div class="wrap">
                    <section style="box-shadow: 0 0 5px #CCC;">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <div class="pull-left col-md-8 col-sm-12 col-xs-12 mt16 mb8" style="padding-left: 0px;padding-right: 0px;">
                                        <h3 t-esc="channel.name" class="mt4"/>
                                    </div>
                                    <div class="col-md-4 col-sm-12 col-xs-12 pul-right mt16 mb8" style="padding-left: 0px;padding-right: 0px;">
                                        <t t-call="website_slides.search"/>
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-12 col-xs-12">
                                    <ul class="nav nav-tabs nav-tabs-simple nav-tabs-sm" style="border-bottom: 0px solid #ddd;">
                                        <li t-attf-class="slide-tabs-li #{not types and 'active' ''}">
                                            <a  t-attf-href="/channel/#{slug(channel)}" class="slide-tabs" data-toggle="tab">Home</a>
                                        </li>

                                        <li t-attf-class="slide-tabs-li #{types == 'presentation' and 'active' ''}">
                                            <a t-attf-href="/channel/#{slug(channel)}/presentation" class="slide-tabs" data-toggle="tab">Presentations</a>
                                        </li>
                                        <li t-attf-class="slide-tabs-li #{types == 'video' and 'active' ''}">
                                            <a t-attf-href="/channel/#{slug(channel)}/video" class="slide-tabs" data-toggle="tab">Videos</a>
                                        </li>
                                        <li t-attf-class="slide-tabs-li #{types == 'document' and 'active' ''}">
                                            <a t-attf-href="/channel/#{slug(channel)}/document" class="slide-tabs" data-toggle="tab">Documents</a>
                                        </li>
                                        <li t-attf-class="slide-tabs-li #{types == 'infographic' and 'active' ''}">
                                            <a t-attf-href="/channel/#{slug(channel)}/infographic" class="slide-tabs" data-toggle="tab">Infographics</a>
                                        </li>
                                    </ul>
                                </div>
                                <div class="pull-right col-md-6 col-sm-12 col-xs-12">
                                    <t t-if="is_public_user">
                                        <a t-attf-href="/web?redirect=#{request.httprequest.url}" class="btn btn-danger upload pull-right" style="border-radius: 0px;"><span class="glyphicon glyphicon-upload"></span> Upload </a>
                                    </t> 
                                    <t t-if="not is_public_user">
                                        <a class="btn btn-danger upload pull-right" t-attf-channel_id="#{channel.id}" style="border-radius: 0px;"><span class="glyphicon glyphicon-upload"></span> Upload </a>
                                    </t>
                                    <ul class="nav nav-tabs nav-tabs-simple nav-tabs-sm pull-right" style="border-bottom: 0px solid #ddd;padding-right: 5px;"  t-if="types">
                                        <li class="slide-tabs-li active dropdown" style="padding-right: 0px;">
                                            <a  href="#" class="slide-tabs dropdown-toggle" data-toggle="tab"><t t-esc="all_count"/> <t t-esc="types"/> Sorted by Recently Published<span class="caret"></span></a>
                                            <ul class="dropdown-menu" role="menu">
                                                <li><a href="?sorting=date">Recently Published</a></li>
                                                <li><a href="?sorting=view">Most Viewed</a></li>
                                                <li><a href="?sorting=view">Most Voted</a></li>
                                            </ul>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section t-if="not famous and not tags and not types and not search and not is_public_user" class="wrap mt16 mb0">
                        <div class="container">
                            <div class="alert alert-danger alert-dismissable mb0" style="border-radius: 0px;">
                                <p>
                                    Review your channel settings to promote your most viewed or recent published presentation
                                </p>
                                <a t-attf-href="/web#return_label=Website&amp;id=#{channel.id}&amp;view_type=form&amp;model=document.directory" class="fa fa-arrow-right mt8">
                                    Channel Setting
                                </a>
                            </div>
                        </div>
                    </section>

                    <section style="background-color: #f1f1f1;border: 1px solid #ccc;" t-if="famous and not tags and not types and not search">
                        <div class="container">
                            <div class="row">
                                <div>
                                    <div class="col-md-6 mt16" t-if="famous.youtube_id" style="padding-left: 30px;padding-right: 30px;">
                                        <a t-attf-href="/channel/#{slug(channel)}/#{famous.slide_type}/#{slug(famous)}">
                                            <t t-call="website_slides.videoview"/>
                                        </a>
                                    </div>
                                    <div class="col-md-6 mt16" t-if="not famous.youtube_id" >
                                        <a t-attf-href="/channel/#{slug(channel)}/#{famous.slide_type}/#{slug(famous)}">
                                            <t t-if="not famous.youtube_id and famous.url" t-call="website_slides.pdfview">
                                                <t t-set="pdf_file" t-value="famous.url"/>
                                                <t t-set="slide" t-value="famous"/>
                                            </t>
                                        </a>
                                    </div>
                                    <div class="col-md-6 mt16">
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="padding-left: 0px;">
                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="padding-left: 0px;">
                                                <p class="oe-slides-text-truncation lead mb0" style="padding-left: 0px;">
                                                    <a t-attf-href="/channel/#{slug(channel)}/#{famous.slide_type}/#{slug(famous)}">
                                                        <t t-esc="famous.name"/>
                                                    </a>
                                                </p>
                                                <div class="mt8 mb8 col-md-16" t-if="famous.tag_ids" style="padding-left: 0px;">
                                                    <t t-foreach="famous.tag_ids" t-as="att_tag">
                                                        <a t-attf-href="/channel/#{slug(channel)}/#{famous.slide_type}/tag/#{att_tag.name}">
                                                            <span t-attf-class="label label-default #{tags and tags == att_tag.name and 'label-primary' ''}" t-field="att_tag.name"/>
                                                        </a>
                                                    </t>
                                                </div>
                                                <p t-if="famous.description"><t t-raw="famous.trim_lines(famous.description)"/></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>

                    <section>
                        <div class="container mt16">
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="padding-left: 15px;padding-right: 15px;" t-if="count_all == 0">
                                    <div class="jumbotron" style="border-radius: 0px;border:1px solid #ccc">
                                        <h1>Empty Channel !</h1>
                                        <p><b><t t-esc="channel.name"/></b> is empty, click on Upload button to upload Presentations, Documents, Videos or Infographic !</p>
                                        <p>
                                            <a t-if="is_public_user" t-attf-href="/web?redirect=#{request.httprequest.url}" class="btn btn-danger upload" style="border-radius: 0px;padding: 10px 20px;"><span class="glyphicon glyphicon-upload"></span> Upload </a>

                                            <a t-if="not is_public_user" class="btn btn-danger upload" t-attf-channel_id="#{channel.id}" style="border-radius: 0px;padding: 10px 20px;"><span class="glyphicon glyphicon-upload"></span> Upload </a>
                                        </p>
                                    </div>
                                </div>

                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mb16" style="padding-left: 0px;padding-right: 0px;" t-if="types">
                                    <t t-call="website_slides.gridview"/>

                                    <div class="jumbotron" style="border-radius: 0px;border:1px solid #ccc" t-if="not attachment_ids">
                                        <h1>Empty !</h1>
                                        <p>No <t t-esc="types"/> found in <b><t t-esc="channel.name"/></b>, click on Upload button to upload first <t t-esc="types"/> !</p>
                                        <p>
                                            <a t-if="is_public_user" t-attf-href="/web?redirect=#{request.httprequest.url}" class="btn btn-danger upload" style="border-radius: 0px;padding: 10px 20px;"><span class="glyphicon glyphicon-upload"></span> Upload </a>

                                            <a t-if="not is_public_user" class="btn btn-danger upload" t-attf-channel_id="#{channel.id}" style="border-radius: 0px;padding: 10px 20px;"><span class="glyphicon glyphicon-upload"></span> Upload </a>
                                        </p>
                                    </div>
                                </div>

                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mb16" style="padding-left: 0px;padding-right: 0px;" t-if="types">
                                    <div class="row text-center">
                                        <t t-call="website.pager"/>
                                    </div>
                                </div>

                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mb16" style="padding-left: 0px;padding-right: 0px;" t-if="not types">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" t-if="slides">
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 text-left" style="padding-left: 0px;">
                                            <a t-attf-href="/channel/#{slug(channel)}/presentation" class="h3 mt0 mb0">Presentations</a>
                                        </div>

                                        <div t-if="count_presentation" class="col-lg-6 col-md-6 col-sm-6 col-xs-6 text-right mt0 mb0" style="padding-right: 0px;">
                                            <a t-attf-href="/channel/#{slug(channel)}/presentation" class="btn btn-primary fa fa-arrow-right" style="background-color: #a24689;border-color:#a24689">View <t t-esc="count_presentation"/> more</a>
                                        </div>
                                    </div>
                                    <t t-call="website_slides.gridview">
                                        <t t-set="attachment_ids" t-value="slides"/>
                                    </t>

                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" t-if="videos">
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 text-left" style="padding-left: 0px;">
                                            <a t-attf-href="/channel/#{slug(channel)}/video" class="h3 mt0 mb0">Videos</a>
                                        </div>

                                        <div t-if="count_video" class="col-lg-6 col-md-6 col-sm-6 col-xs-6 text-right mt0 mb0" style="padding-right: 0px;">
                                            <a t-attf-href="/channel/#{slug(channel)}/video" class="btn btn-primary fa fa-arrow-right" style="background-color: #a24689;border-color:#a24689">View <t t-esc="count_video"/> more</a>
                                        </div>
                                    </div>
                                    <t t-call="website_slides.gridview">
                                        <t t-set="attachment_ids" t-value="videos"/>
                                    </t>
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" t-if="documents">
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 text-left" style="padding-left: 0px;">
                                            <a t-attf-href="/channel/#{slug(channel)}/document" class="h3 mt0 mb0">Documents</a>
                                        </div>

                                        <div t-if="count_document" class="col-lg-6 col-md-6 col-sm-6 col-xs-6 text-right mt0 mb0" style="padding-right: 0px;">
                                            <a t-attf-href="/channel/#{slug(channel)}/document" class="btn btn-primary fa fa-arrow-right" style="background-color: #a24689;border-color:#a24689">View <t t-esc="count_document"/> more</a>
                                        </div>
                                    </div>
                                    <t t-call="website_slides.gridview">
                                        <t t-set="attachment_ids" t-value="documents"/>
                                    </t>

                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" t-if="infographics">
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 text-left" style="padding-left: 0px;">
                                            <a t-attf-href="/channel/#{slug(channel)}/infographic" class="h3 mt0 mb0">Infographic</a>
                                        </div>

                                        <div t-if="count_infographic" class="col-lg-6 col-md-6 col-sm-6 col-xs-6 text-right mt0 mb0" style="padding-right: 0px;">
                                            <a t-attf-href="/channel/#{slug(channel)}/infographic" class="btn btn-primary fa fa-arrow-right" style="background-color: #a24689;border-color:#a24689">View <t t-esc="count_infographic"/> more</a>
                                        </div>
                                    </div>
                                    <t t-call="website_slides.gridview">
                                        <t t-set="attachment_ids" t-value="infographics"/>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
                <div class="oe_clear"/>
            </t>
        </template>

        <!-- channel list, will be display if more then one channel available -->
        <template id="channels" name="Channels">
            <t t-set="head"><t t-call="website_slides.head"/></t>
            <t t-call="website.layout">
                <div class="oe_structure"/>
                <div class="container mt16">
                    <div class="row">
                        <div t-foreach="channels" t-as="channel" class="col-sm-4 mb32">
                            <t t-set="famous" t-value="channel.get_mostviewed(channel)"/>
                            <div class="oe-channel-grid-thumbnail">
                                <a t-attf-href="/channel/#{slug(channel)}" t-if="famous">
                                    <span class="channel-box">
                                        <img t-attf-src="/slides/thumb/#{famous.id}" class="img-responsive" style="width: 100%;opacity: .5;"/>
                                    </span>
                                </a>
                                <a t-attf-href="/channel/#{slug(channel)}" t-if="not famous">
                                    <span class="channel-box">
                                        <img src="/website_slides/static/description/channel-default.jpg" class="img-responsive" style="width: 100%;opacity: .5;"/>
                                    </span>
                                </a>
                                <div style="padding: 5px;">
                                    <a t-attf-href="/channel/#{slug(channel)}">
                                        <p class="oe-slides-text-truncation mt4 mb4 lead">
                                            <t t-esc="channel.name"/>
                                        </p>
                                    </a>
                                    <p t-field="channel.description"/>
                                    <div class="mt4">
                                        <t t-call="website.publish_management">
                                            <t t-set="object" t-value="channel"/>
                                            <t t-set="publish_edit" t-value="True"/>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <!-- display one slide -->
        <template id='slide_view' name="Odoo Slide">
            <t t-set="head">
                <t t-call="website_slides.head"/>
                <script type="text/javascript" src="/website_slides/static/lib/pdfjs/build/pdf.js"></script>
                <script type="text/javascript" src="/website_slides/static/src/js/pdfviewer.js"></script>
            </t>
            <t t-call="website.layout">
                <t t-set="main_object" t-value="slideview"/>
                <div class="container mt16">
                    <div class="row">
                        <t t-call="website_slides.detailview"/>
                    </div>
                </div>
            </t>
        </template>

        <!-- slide grid view -->
        <template id='gridview' name="Slides">
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12" style="margin-top: 15px;margin-bottom: 15px;"  t-foreach="attachment_ids" t-as="attachment">
                <div t-attf-class="oe-#{attachment.slide_type}-grid-thumbnail">
                    <a t-attf-href="/channel/#{slug(channel)}/#{attachment.slide_type}/#{slug(attachment)}">
                        <span t-attf-class="oe-#{attachment.slide_type}-image-thumbnail">
                            <img t-attf-src="/slides/thumb/#{attachment.id}" style="width: 100%;" class="img-responsive"/>
                        </span>
                    </a>
                    <span t-if="not attachment.website_published" class="label label-danger" style="position: absolute;right: 20px;top: 7px;">Not Published</span>

                    <div style="padding: 5px;">
                        <a t-attf-href="/channel/#{slug(channel)}/#{attachment.slide_type}/#{slug(attachment)}">
                            <h4 class="oe-slides-text-truncation">
                                <t t-esc="attachment.name"/>
                            </h4>
                        </a>
                        <div class="text-muted">
                            <small class="pull-left">
                                <t t-esc="attachment.slide_views" />
                                Views
                            </small>
                            <small class="pull-right">
                                <timeago class="timeago" t-att-title="attachment.create_date"></timeago>
                            </small>
                        </div>
                        <p t-if="attachment.tag_ids" class="oe-slides-text-truncation" style="padding-top: 5px;">
                            <t t-foreach="attachment.tag_ids" t-as="att_tag">
                                <a t-attf-href="/channel/#{slug(channel)}/#{attachment.slide_type}/tag/#{att_tag.name}">
                                    <span t-attf-class="label label-default #{tags and tags == att_tag.name and 'label-primary' ''}" t-field="att_tag.name"/>
                                </a>
                            </t>
                        </p>
                    </div>
                </div>
            </div>
        </template>

        <!-- slide detail view -->
        <template id='detailview' name="Slide Detail">
            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                <t t-if="slideview.datas">
                    <t t-call="website_slides.pdfview">
                        <t t-set="pdf_file" t-value="slideview.url"/>
                        <t t-set="slide" t-value="slideview"/>
                    </t>
                </t>
                <div t-if="slideview.youtube_id" class="embed-responsive embed-responsive-16by9 embed-responsive-item mb8">
                    <iframe t-attf-src="//www.youtube.com/embed/#{slideview.youtube_id}?theme=light"></iframe>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="padding: 0px;">
                    <h3 class="oe-slides-text-truncation mt0">
                        <t t-esc="slideview.name"/>
                    </h3>

                    <div class="pull-left mb16 col-md-6" t-if="slideview.tag_ids" style="padding-left: 0px;">
                        <t t-foreach="slideview.tag_ids" t-as="att_tag">
                            <a t-attf-href="/channel/#{slug(channel)}/#{slideview.slide_type}/tag/#{att_tag.name}">
                                <span t-attf-class="label label-default #{tags and tags == att_tag.name and 'label-primary' ''}" t-field="att_tag.name"/>
                            </a>
                        </t>
                    </div>
                    <div class="pull-right mb16 col-md-6 text-right text-muted" style="padding-right: 0px">
                        <a class="slide-like" data-count-el='.count-likes' t-attf-data-href="/channel/#{slug(channel)}/#{slug(slideview)}/like"><i class="fa fa-thumbs-up fa-2x"></i> Like</a>
                        <a class="slide-unlike" data-count-el=".count-dislikes" t-attf-data-href="/channel/#{slug(channel)}/#{slug(slideview)}/dislike"><i class="fa fa-thumbs-down fa-2x"></i></a>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="padding: 0px;">
                    <div class="col-lg-1 col-md-1 col-sm-1 col-xs-2" style="padding: 0px;">
                        <a t-attf-href="/channel/#{slug(channel)}">
                            <img src="/website_slides/static/description/odoo-logo.jpg" class="img-responsive" style="border: 1px solid #CCC;"/>
                        </a>
                    </div>
                    <div class="col-lg-11 col-md-11 col-sm-11 col-xs-10" style="padding-right:0px;padding-left: 10px;">
                        <div class="pull-right text-right col-md-4" style="padding-right:0px;">
                            <div style="border-bottom: 1px solid #CCC; font-size:130%">
                                <b><t t-esc="slideview.slide_views"/></b> Views
                            </div>
                            <div class="small text-muted mt4">
                                <i class="count-likes fa fa-thumbs-up" style="padding-left: 10px;">
                                    <t t-esc="slideview.likes"/>
                                </i>
                                <i class="count-dislikes fa fa-thumbs-down">
                                    <t t-esc="slideview.dislikes"/>
                                </i>
                            </div>
                            <t t-call="website.publish_management">
                                <t t-set="object" t-value="slideview"/>
                                <t t-set="publish_edit" t-value="True"/>
                            </t>
                        </div>

                        <div class="pull-left col-md-7" style="padding-left: 0;">
                            <a t-attf-href="/channel/#{slug(channel)}">
                                <p t-field="channel.name"/>
                            </a>
                            <div class="mt0">
                                <t t-call="website_mail.follow">
                                    <t t-set="email" t-value="user.email"/>
                                    <t t-set="object" t-value="channel"/>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="padding: 10px 0px 10px 0px;">
                    <ul class="nav nav-tabs nav-tabs-simple nav-tabs-sm" role="tablist">
                        <li class="slide-tabs-li"><a href="#about" role="tab" data-toggle="tab" class="slide-tabs">About</a></li>
                        <li class="slide-tabs-li"><a href="#share" role="tab" data-toggle="tab" class="slide-tabs">Share</a></li>
                        <li class="active slide-tabs-li"><a href="#discuss" role="tab" data-toggle="tab" class="slide-tabs">Discuss</a></li>
                        <li class="slide-tabs-li"><a href="#transcript" role="tab" data-toggle="tab" class="slide-tabs">Transcript</a></li>
                    </ul>
                    <div class="tab-content" style="padding: 20px 5px 5px 5px;">
                        <div class="tab-pane fade" id="about">
                            <div t-if="slideview.description" t-field="slideview.description"/>
                            <div t-if="not slideview.description" t-field="slideview.website_description"/>
                        </div>
                        <div class="tab-pane fade" id="share">
                            <t t-call="website_slides.slide_share">
                                <t t-set="slide" t-value="slideview"/>
                            </t>
                        </div>
                        <div class="tab-pane fade in active" id="discuss">
                            <form id="comment" t-attf-action="/slides/comment/#{slideview.id}" method="POST">
                                <div class="media">
                                    <span class="pull-left">
                                        <img class="img img-circle media-object" t-att-src="'/website/image?model=res.partner&amp;field=image_small&amp;id='+str(user_id.partner_id.id)" style="width: 30px"/>
                                    </span>
                                    <div class="media-body">
                                        <textarea rows="3" name="comment" class="form-control" placeholder="Write a comment..."></textarea>
                                        <button type="submit" class="btn btn-primary mt8">Post</button>
                                    </div>
                                </div>
                            </form>
                            <ul class="media-list">
                                <li t-foreach="comments" t-as="message" class="media">
                                    <span class="pull-left">
                                        <img class="media-object img img-circle" t-att-src="'/website/image?model=mail.message&amp;field=author_avatar&amp;id='+str(message.id)" style="width: 30px"/>
                                    </span>
                                    <div class="media-body">
                                        <t t-call="website.publish_short">
                                            <t t-set="object" t-value="message"/>
                                        </t>
                                        <span t-field="message.author_id" style="display: inline-block;" t-field-options='{"widget": "contact", "fields": ["name"]}'/>
                                        <span class="text-muted">on<span t-field="message.date"/></span>
                                        <div t-field="message.body" class="discussion_scroll_post"></div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                        <div class="tab-pane fade" id="transcript">
                            <p t-field="slideview.index_content"></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12" style="padding-left: 5px;">
                <ul class="nav nav-tabs" role="tablist">
                    <li class="active"><a href="#related" data-toggle="tab">Related</a></li>
                    <li><a href="#most_viewed" data-toggle="tab">Most Viewed</a></li>
                </ul>
                <div class="tab-content">
                    <div id="related" class="tab-pane active">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 slide-box">
                            <ul class="media-list">
                                <t t-foreach="related_ids" t-as="attachment">
                                    <t t-call="website_slides.slide-box"/>
                                </t>
                            </ul>
                        </div>
                    </div>
                    <div id="most_viewed" class="tab-pane">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 slide-box">
                            <ul class="media-list">
                                <t t-foreach="most_viewed_ids" t-as="attachment">
                                    <t t-call="website_slides.slide-box"/>
                                </t>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </template>

        <template id="slide-box" name="Slide Box">
            <li class="media slide-container">
                <a class="pull-left" t-attf-href="/channel/#{slug(channel)}/#{attachment.slide_type}/#{slug(attachment)}">
                    <span class="slide-small-box">
                        <img class="media-object img-responsive" t-attf-src="/slides/thumb/#{attachment.id}"/>
                    </span>
                </a>
                <div class="media-heading">
                    <div class="text-truncation" t-att-title="attachment.name">
                        <t t-esc="attachment.name"/>
                    </div>
                    <small class="text-muted">
                        <div class="pull-left"><t t-esc="attachment.slide_views"/> Views</div><br/>
                        <div class="pull-left"><timeago class="timeago" t-att-title="attachment.create_date"></timeago></div>
                    </small>
                </div>
            </li>
        </template>

     </data>
</openerp>
