<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="category_template">
            <t t-if="p['category']">
                <tr>
                    <td colspan="100" class="active" style="font-weight: bold; border-bottom: 1px solid black;">
                        <t t-if="p['category'].name">
                            <t t-esc="p['category'].name"></t>
                        </t>
                        <t t-if="not p['category'].name">
                            Uncategorized
                        </t>
                    </td>
                </tr>
            </t>
        </template>
        <template id="subtotal_template">
            <t t-if="'subtotal' in p['category'] and p['category'].subtotal is True">
                <tr>
                    <td></td><td></td><td></td><td></td>
                    <td class="text-right"><strong>Subtotal:</strong></td>
                    <td class="text-right">
                        <strong t-esc="p['subtotal']" t-esc-options='{"widget": "monetary","display_currency": "quotation.pricelist_id.currency_id"}'/>
                    </td>
                </tr>
            </t>
        </template>
    </data>
</openerp>
