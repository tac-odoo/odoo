<?xml version="1.0"?>
<openerp>
    <data>
        <!--  Partners inherited form -->
        <record id="view_helpdesk_res_partner_info_form" model="ir.ui.view">
            <field name="name">res.partner.helpdesk.info.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="priority" eval="50"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='buttons']" position="inside">
                    <button class="oe_inline oe_stat_button" type="action" 
                        context="{'search_default_partner_id': active_id, 'default_partner_id': active_id}"
                        name="%(crm_case_helpdesk_act111)d" icon="fa-user" groups="base.group_sale_salesman">
                        <field string="Helpdesk" name="helpdesk_count" widget="statinfo"/>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
