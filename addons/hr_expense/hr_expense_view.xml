<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Expenses -->

        <record id="view_expense_to_approve_tree" model="ir.ui.view">
            <field name="name">hr.expense.sheet.tree</field>
            <field name="model">hr_expense.sheet</field>
            <field name="arch" type="xml">
                <tree string="Expenses Approve" colors="blue:state=='draft'" fonts="bold: message_unread == True" create="false">
                    <field name="employee_id"/>
                    <field name="department_id" invisible="1"/>
                    <field name="date"/>
                    <field name="user_id" invisible="1"/>
                    <field name="name" string="Expense Sheet"/>
                    <field name="currency_id" groups="base.group_multi_currency"/>
                    <field name="amount" sum="Total Amount"/>
                    <field name="state"/>
                    <field name="message_unread" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="view_expenses_to_approve_form" model="ir.ui.view">
            <field name="name">hr.expense.form</field>
            <field name="model">hr_expense.sheet</field>
            <field name="arch" type="xml">
                <form string="Expenses Approve" create="false">
                <header>
                    <button name="confirm" states="draft" string="Submit to Manager" type="workflow" class="oe_highlight"/>
                    <button name="validate" states="confirm" string="Approve" type="workflow" groups="base.group_hr_user" class="oe_highlight"/>
                    <button name="refuse" states="confirm,accepted" string="Refuse" type="workflow" groups="base.group_hr_user" />
                    <button name="draft" states="confirm,cancelled" string="Set to Draft" type="workflow" groups="base.group_hr_user" />
                    <button name="done" states="accepted" string="Generate Accounting Entries" type="workflow" groups="account.group_account_invoice,account.group_account_user" class="oe_highlight"/>
                    <button name="action_view_move" states="done" string="Open Accounting Entries" type="object" groups="account.group_account_invoice,account.group_account_user"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,accepted,done,paid" statusbar_colors='{"confirm":"blue","cancelled":"red"}'/>
                </header>
                <sheet>
                <div class="oe_title">
                <label for="employee_id" string="Employee" class="oe_edit_only"/>
                    <h1>
                        <field name="employee_id" class="oe_inline" readonly="1"/>
                    </h1>
                </div>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="department_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="name"/>
                            <field name="user_valid" attrs="{'invisible': [('state','=','draft')]}" context="{'default_groups_ref': ['base.group_user', 'base.group_partner_manager', 'base.group_hr_user']}"/>
                            <field name="currency_id" groups="base.group_multi_currency"/>
                        </group>
                        <group>
                            <field name="journal_id" widget="selection" attrs="{'readonly':[('state','=','done')]}" domain="[('type', '=', 'purchase')]" string="Journal" groups="account.group_account_user"/>
                            <field name="employee_payable_account_id" widget="selection" attrs="{'readonly':[('state','=','done')]}" domain="[('type', '=', 'payable')]" groups="account.group_account_user"/>
                        </group>
                        <group>
                            <label class="oe_grey" groups="account.group_account_user" string="If this field is empty, entries will be generated in the purchase journal."/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Expense Lines">
                            <field name="line_ids" context="{'currency_id': currency_id, 'default_analytic_account': context.get('analytic_account', '')}">
                                <form string="Expense Lines">
                                    <group>
                                        <group>
                                            <field name="product_id" context="{'default_can_be_expensed':1}"/>
                                            <field name="name"/>
                                            <field name="ref"/>
                                            <field domain="[('type','=','normal')]" name="analytic_account" groups="analytic.group_analytic_accounting"/>
                                        </group>
                                        <group>
                                            <field name="unit_amount"/>
                                            <label for="unit_quantity"/>
                                            <div>
                                                <field name="unit_quantity" class="oe_inline"/> 
                                                <field name="uom_id" class="oe_inline"/>
                                            </div>
                                            <field name="date" />
                                        </group>
                                    </group>
                                </form>
                                <tree string="Expense Lines" editable="bottom">
                                    <field name="sequence" invisible="1"/>
                                    <field name="product_id" context="{'default_can_be_expensed':1}"/>
                                    <field name="date" string="Expense Date"/>
                                    <field name="name" string="Description"/>
                                    <field name="employee_id"/>
                                    <field domain="[('type','in',['normal','contract'])]" name="analytic_account" groups="analytic.group_analytic_accounting"/>
                                    <field name="uom_id"/>
                                    <field name="unit_amount"/>
                                    <field name="unit_quantity"/>
                                    <field name="expense_tax_id" widget="many2many_tags" groups="account.group_account_user"/>
                                    <field name="total_amount" sum="Total"/>
                                    <field name="state"/>
                                    <button name="expense_line_submit_to_approved_status" states="confirm" string="Approved by hr manager" type="object" icon="gtk-apply"/>
                                    <button name="expense_line_submit_to_canceled_status" states="confirm" string="Cancelled by hr manager" type="object" icon="gtk-cancel"/>
                                </tree>
                            </field>
                            <group>
                                <div>
                                    <separator string="Description"/>
                                    <field name="note" placeholder="Free Notes"/>
                                </div>
                                <group class="oe_subtotal_footer oe_right">
                                    <field name="amount" widget="monetary" options="{'currency_field': 'currency_id'}" class="oe_subtotal_footer_separator"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>
            </field>
        </record>
    
        <record id="view_expense_to_approve_filter" model="ir.ui.view">
            <field name="name">hr.expense.sheet.filter</field>
            <field name="model">hr_expense.sheet</field>
            <field name="arch" type="xml">
                <search string="Expense">
                    <field name="name" string="Expenses"/>
                    <field name="date"/>
                    <field name="employee_id"/>
                    <field name="department_id" string="Department" context="{'invisible_department': False}"/>
                    <filter domain="[('state','=','draft')]" string="New" help="New Expense"/>
                    <filter domain="[('state','=','confirm')]" string="To Approve" name="confirm" help="Confirmed Expenses"/>
                    <filter domain="[('state','=','accepted')]" string="To Pay" name="approved" help="Expenses to Invoice"/>
                    <separator />
                    <filter domain="[('user_id', '=', uid)]" string="My Expenses"/>
                    <separator />
                    <filter string="New Mail" name="message_unread" domain="[('message_unread','=',True)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Employee" domain="[]" context="{'group_by':'employee_id'}"/>
                        <filter string="Department" domain="[]" context="{'group_by':'department_id'}"/>
                        <filter string="Expenses Month" domain="[]" context="{'group_by':'date'}" help="Expenses by Month"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_product_hr_expense_form" model="ir.ui.view">
            <field name="name">product.template.expense.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <div name="options" position="inside">
                    <div>
                        <field name="can_be_expensed"/>
                        <label for="can_be_expensed"/>
                    </div>
                </div>
            </field>
        </record>

        <record id="action_run_expense_sheet" model="ir.actions.server">
            <field name="name">Approve expenses</field>
            <field name="condition">True</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="model_hr_expense_sheet"/>
            <field name="state">code</field>
            <field name="code">
                self.expense_accept(cr, uid, context.get('active_ids', []), context=context)
            </field>
        </record>

        <record model="ir.values" id="action_module_expense_sheet">
            <field name="name">action_module_expense_sheet</field>
            <field name="action_id" ref="action_run_expense_sheet" />
            <field name="value" eval="'ir.actions.server,' + str(ref('action_run_expense_sheet'))" />
            <field name="key">action</field>
            <field name="model_id" ref="model_hr_expense_sheet" />
            <field name="model">hr_expense.sheet</field>
            <field name="key2">client_action_multi</field>
        </record>
        
        <record id="hr_expense_product" model="ir.actions.act_window">
            <field name="name">Expense Products</field>
            <field name="res_model">product.product</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{"default_can_be_expensed":1}</field>
            <field name="domain">[('can_be_expensed','=',True)]</field>
            <field name="search_view_id" ref="product.product_search_form_view"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create a new expense category. 
             </p>
            </field>
        </record>

        <record id="action_approved_expense" model="ir.actions.act_window">
            <field name="name">Expenses</field>
            <field name="res_model">hr_expense.sheet</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_expense_to_approve_tree"/>
            <field name="domain">[('state','=','accepted')]</field> 
        </record>
        
        <record id="action_expense_to_approve" model="ir.actions.act_window">
            <field name="name">Expenses to Approve</field>
            <field name="res_model">hr_expense.sheet</field>
            <field name="view_type">form</field>
            <field name="context">{'search_default_confirm':1}</field>
            <field name="search_view_id" ref="view_expense_to_approve_filter"/>
            <field name="view_id" ref="view_expense_to_approve_tree"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to register new expenses. 
              </p><p>
                OpenERP will ensure the whole process is followed; the expense
                sheet is validated by manager(s), the employee is reimbursed
                from his expenses, some expenses must be re-invoiced to the
                customers.
              </p>
            </field>
        </record>
        
<!-- create expense -->

        <record id="action_run_hr_expense_line" model="ir.actions.server">
            <field name="name">Submit Expenses</field>
            <field name="condition">True</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="model_hr_expense_expense"/>
            <field name="state">code</field>
            <field name="code">
                self.expense_line_new_to_confirm_status(cr, uid, context.get('active_ids', []), context=context)
            </field>
        </record>

        <record model="ir.values" id="action_module_hr_expense_line">
            <field name="name">action_module_hr_expense_line</field>
            <field name="action_id" ref="action_run_hr_expense_line" />
            <field name="value" eval="'ir.actions.server,' + str(ref('action_run_hr_expense_line'))" />
            <field name="key">action</field>
            <field name="model_id" ref="model_hr_expense_expense" />
            <field name="model">hr_expense.expense</field>
            <field name="key2">client_action_multi</field>
        </record>
        
        <record id="view_hr_crete_expense_filter" model="ir.ui.view">
            <field name="name">hr.create.expense.filter</field>
            <field name="model">hr_expense.expense</field>
            <field name="arch" type="xml">
                <search string="Create Expense">
                    <field name="name" string="Expenses"/>
                    <field name="date"/>
                    <field name="employee_id"/>
                    <filter domain="[('state','=','draft')]" string="New" name="new_expense" help="New Expense"/>
                    <separator />
                    <filter domain="[('employee_id.user_id', '=', uid)]" string="My Expenses"/>
                    <separator />
                    <group expand="0" string="Group By">
                        <filter string="Employee" domain="[]" context="{'group_by':'employee_id'}"/>
                        <filter string="Expenses Month" domain="[]" context="{'group_by':'date'}" help="Expenses by Month"/>
                    </group>
                </search>
            </field>
        </record>
        
        <record id="view_create_expenses_tree" model="ir.ui.view">
            <field name="name">hr.create.expense.tree</field>
            <field name="model">hr_expense.expense</field>
            <field name="arch" type="xml">
                <tree string="Expenses" colors="blue:state=='draft'">
                    <field name="name" string="Description"/>
                    <field name="date"/>
                    <field name="employee_id"/>
                    <field name="analytic_account"/>
                    <field name="product_id" string="Expense Product"/>
                    <field name="unit_amount"/>
                    <field name="unit_quantity"/>
                    <field name="total_amount" sum="Total Amount"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        
        <record id="view_create_expenses_form" model="ir.ui.view">
            <field name="name">hr.cretae.expense.form</field>
            <field name="model">hr_expense.expense</field>
            <field name="arch" type="xml">
                <form string="Create Expenses">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft" statusbar_colors='{"draft":"blue"}'/>
                </header>
                <sheet>
                    <form string="Expense Lines">
                        <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" class="oe_inline"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="date"/>
                                <field name="ref"/>
                                <field name="employee_id"/>
                                <field name="analytic_account" string="Contract"/>
                            </group>
                            <group>
                                <field name="product_id" string="Expense Product" context="{'default_can_be_expensed':1}"/>
                                <field name="unit_amount" required="1"/>
                                <label for="unit_quantity"/>
                                <div>
                                    <field name="unit_quantity" class="oe_inline" required="1"/> 
                                    <field name="uom_id" class="oe_inline"/>
                                </div>
                                <label for="expense_tax_id" groups="account.group_account_user"/>
                                <div>
                                    <field name="expense_tax_id" widget="many2many_tags" groups="account.group_account_user"/>
                                </div>
                            </group>
                        </group>
                        <group class="oe_subtotal_footer oe_right">
                            <label for="total_amount"  class="oe_subtotal_footer_separator" style="padding-top: 6px !important;"/>
                                <div>
                                    <field name="total_amount" nolabel="1" class="oe_subtotal_footer_separator"/>
                                </div>
                        </group>
                        <group>
                            <div id="alertbox" class="alert alert-warning">Use the here under messaging tool to log a note about your expense or attatch a receipt.
                                <a class="close" data-dismiss="alert" href="#" aria-hidden="true">x</a>
                            </div>
                        </group>

                    </form>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>
            </field>
        </record>

        <record id="action_create_expenses" model="ir.actions.act_window">
            <field name="name">Create Expenses</field>
            <field name="res_model">hr_expense.expense</field>
            <field name="view_type">form</field>
            <field name="search_view_id" ref="view_hr_crete_expense_filter"/>
            <field name="view_id" ref="view_create_expenses_tree"/>
            <field name="domain">[('state','=','draft')]</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to register new expenses. 
              </p><p>
                Odoo will ensure the whole process is followed; the expense
                is submited to manager(s), the employee is reimbursed
                from his expenses, some expenses must be re-invoiced to the
                customers.
              </p>
            </field>
        </record>

<!-- Expense to submit -->

        <record id="view_expense_to_submit_filter" model="ir.ui.view">
            <field name="name">hr.expense.submit.filter</field>
            <field name="model">hr_expense.expense</field>
            <field name="arch" type="xml">
                <search string="Expense submit">
                    <field name="name" string="Expenses"/>
                    <field name="date"/>
                    <field name="employee_id"/>
                    <filter domain="[('state','=','draft')]" string="New" name="new_expense" help="New Expense"/>
                    <separator />
                    <filter domain="[('employee_id.user_id', '=', uid)]" string="My Expenses"/>
                    <separator />
                    <group expand="0" string="Group By">
                        <filter string="Employee" domain="[]" context="{'group_by':'employee_id'}"/>
                        <filter string="Expenses Month" domain="[]" context="{'group_by':'date'}" help="Expenses by Month"/>
                    </group>
                </search>
            </field>
        </record>
        
        <record id="view_expenses_to_submit_tree" model="ir.ui.view">
            <field name="name">hr.expense.submit.tree</field>
            <field name="model">hr_expense.expense</field>
            <field name="arch" type="xml">
                <tree string="Expenses submit" colors="blue:state=='draft';red:state=='cancel'">
                    <field name="name" string="Description"/>
                    <field name="date"/>
                    <field name="employee_id"/>
                    <field name="analytic_account"/>
                    <field name="product_id" string="Expense Product"/>
                    <field name="unit_amount"/>
                    <field name="unit_quantity"/>
                    <field name="total_amount" sum="Total Amount"/>
                    <field name="state"/>
                    <button name="expense_line_new_to_confirm_status" states="draft" string="Submit to Manager" type="object" icon="gtk-apply"/>
                </tree>
            </field>
        </record>
        
        <record id="view_expenses_to_submit_form" model="ir.ui.view">
            <field name="name">hr.expemse.submit.form</field>
            <field name="model">hr_expense.expense</field>
            <field name="arch" type="xml">
                <form string="Expenses submit">
                <header>
                    <button name="expense_line_new_to_confirm_status" states="draft" string="Submit" type="object" class="oe_highlight"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,accepted,cancel" statusbar_colors='{"draft":"blue"}'/>
                </header>
                <sheet>
                    <form string="Expense Lines">
                        <div class="oe_title">
                        <label for="name"  string="Description" class="oe_edit_only"/>
                            <h1>
                                <field name="name" class="oe_inline" attrs="{'readonly': [('state','!=','draft')]}"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="date" attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field name="ref"/>
                                <field name="employee_id" attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field name="analytic_account" string="Contract" attrs="{'readonly': [('state','!=','draft')]}"/>
                            </group>
                            <group>
                                <field name="product_id" string="Expense Product" context="{'default_can_be_expensed':1}" attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field name="unit_amount" required="1" attrs="{'readonly': [('state','!=','draft')]}"/>
                                <label for="unit_quantity"/>
                                <div>
                                    <field name="unit_quantity" required="1" attrs="{'readonly': [('state','!=','draft')]}"/> 
                                    <field name="uom_id" class="oe_inline" attrs="{'readonly': [('state','!=','draft')]}"/>
                                </div>
                                <label for="expense_tax_id" groups="account.group_account_user"/>
                                <div>
                                    <field name="expense_tax_id" widget="many2many_tags" groups="account.group_account_user" attrs="{'readonly': [('state','!=','draft')]}"/>
                                </div>
                            </group>
                        </group>
                        <group class="oe_subtotal_footer oe_right">
                            <label for="total_amount"  class="oe_subtotal_footer_separator" style="padding-top: 6px !important;"/>
                                <div>
                                    <field name="total_amount" nolabel="1" class="oe_subtotal_footer_separator "/>
                                </div>
                        </group>
                    </form>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>
            </field>
        </record>

        <record id="action_expense_to_submit" model="ir.actions.act_window">
            <field name="name">Expenses to Submit</field>
            <field name="res_model">hr_expense.expense</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_hr_crete_expense_filter"/>
            <field name="view_id" ref="view_create_expenses_tree"/>
            <field name="domain">[('employee_id.user_id','=',uid)]</field>
            <field name="context">{'search_default_new_expense':1}</field>
            <field name="view_id" ref="view_expenses_to_submit_tree"/>
            <field name="search_view_id" ref="view_expense_to_submit_filter"/>
        </record>

        <record id="action_expense_to_submit_view_tree" model="ir.actions.act_window.view">
            <field name="sequence">1</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_expenses_to_submit_tree"/>
            <field name="act_window_id" ref="action_expense_to_submit"/>
        </record>

        <record id="action_expense_to_submit_view_form" model="ir.actions.act_window.view">
            <field name="sequence">2</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_expenses_to_submit_form"/>
            <field name="act_window_id" ref="action_expense_to_submit"/>
        </record>

        <menuitem id="menu_expense_approved" name="Employees Expenses" parent="account.menu_finance_payables" action="action_approved_expense" sequence="8"/>
        <menuitem id="menu_hr_product" name="Expense Products" parent="hr.menu_hr_configuration_expenses" action="hr_expense_product" groups="base.group_hr_manager"/>
        <menuitem id="next_id_49" name="Expenses" sequence="15" parent="hr.menu_hr_root"/>
        <menuitem action="action_create_expenses" id="menu_create_expense" name="Create Expenses" parent="next_id_49" sequence="1"/>
        <menuitem action="action_expense_to_submit" id="menu_expense_to_submit" name="Expenses to Submit" parent="next_id_49" sequence="2"/>
        <menuitem action="action_expense_to_approve" id="menu_expense_to_approve" name="Expenses to Approve" parent="next_id_49" groups="base.group_hr_user" sequence="3"/>
        
    </data>
</openerp>
