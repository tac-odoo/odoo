<?xml version="1.0" encoding="utf-8"?>
<openerp>
        <!-- web tip for expense -->
    <data>
        <record model="web.tip" id="expense_tip_1">
            <field name="title"></field>
            <field name="description">Congratulation, you have done your first expense. Click on create to add a new one.</field>
            <field name="action_id" ref="hr_expense.action_create_expenses"/>
            <field name="model">hr.expense.line</field>
            <field name="mode">form</field>
            <field name="trigger_selector">.oe_form_buttons_view:visible > button</field>
            <field name="highlight_selector">.oe_form_button_create:visible</field>
            <field name="placement">bottom</field>
        </record>

        <record model="web.tip" id="expense_tip_2">
            <field name="title"></field>
            <field name="description">Select lines you want to submit to be reimbursed.</field>
            <field name="action_id" ref="hr_expense.action_expense_to_submit"/>
            <field name="model">hr.expense.line</field>
            <field name="mode">list</field>
            <field name="trigger_selector">input.oe_list_record_selector:visible</field>
            <field name="highlight_selector">input.oe_list_record_selector:visible</field>
            <field name="placement">bottom</field>
        </record>

    </data>
</openerp>
