<openerp>
    <data>
        <!--account.journal kanban view-->
        <record id="view_account_journal_kanban_view" model="ir.ui.view">
            <field name="name">account.journal.dashboard.kanban</field>
            <field name="model">account.journal</field>
            <field name="arch" type="xml">
                <kanban create="false" class="oe_journal_dashboard_kanban">
                    <field name="name"/>
                    <field name="type"/>
                    <field name="kanban_graph"/>
                    <field name="kanban_dashboard"/>
                    <field name="dashboard_star"/>
                    <templates>
                        <t t-name="kanban-box">
                            <t t-value="JSON.parse(record.kanban_dashboard.raw_value)" t-set="dashboard"/>
                            <t t-value="record.type.raw_value" t-set="journal_type"/>
                            <t t-value="dashboard.draft_invoice_amount or dashboard.overdue_invoice_amount or dashboard.todo_payment_amount or dashboard.paid_invoice_amount" t-set="is_invoice_stats"/>
                            <div class="panel panel-default oe_semantic_html_override">
                                <div class="panel-heading">
                                    <t t-call="JournalTop" />
                                </div>
                                <div class="row">
                                    <t t-call="JournalCreate"/>
                                </div>
                                <div class="row">
                                    <t t-call="JournalBottom"/>
                                </div>
                                <div class="row" groups="account.group_account_user">
                                    <t t-call="JournalDetails"/>
                                </div>
                            </div>
                        </t>
                        <t t-name="JournalTop">   
                            <div class="text-center">
                                <p style="font-size: 16px;" t-att-title="record.name.raw_value">
                                    <strong><field name="name"/></strong>
                                    <a type="object" name="add_remove_journal_favorite">
                                    <span t-att-class="record.dashboard_star.raw_value == true and 'oe_e oe_star_on' or 'oe_e oe_star_off'">7</span></a>
                                </p>
                            </div>
                        </t>
                        <t t-name="JournalDetails">
                            <div class="col-md-12">
                                <div class="oe_graph">
                                    <field name="kanban_graph" t-att-graph_type="_.contains(['cash','bank','sale'],journal_type) ? 'line' : 'bar'" widget="dashboard_graph"></field>
                                </div>
                            </div>
                        </t>
                        <t t-name="JournalCreate">
                            <div t-if="journal_type == 'sale'" class="col-md-12" name="sale-create-link">
                                <a type="object" name="open_action" class="pull-right">Create Invoice</a>
                            </div>
                            <div t-if="journal_type == 'purchase'" class="col-md-12">
                                <a type="object" name="open_action" class="pull-right">Create Invoice</a>
                            </div>
                            <div t-if="journal_type == 'bank' or journal_type == 'cash'" class="col-md-12">
                                <a type="object" name="open_action" class="pull-right">Create Statement</a>
                            </div>
                        </t>
                        <t t-name="JournalBottom">
                            <div t-if="journal_type == 'sale' or journal_type == 'purchase'">
                                    <div class="col-md-4">
                                        <div class="oe_journal_title">
                                            <p><a type="object" name="open_action" context="{'search_default_state':'draft'}">Draft</a></p>
                                        </div>
                                        <div class="oe_journal_data">
                                            <span t-esc="dashboard.draft_invoice_amount"/>
                                            <span t-esc="dashboard.currency_symbol"/>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="oe_journal_title">
                                            <p t-if="journal_type == 'sale' or journal_type == 'purchase'">Overdue</p>
                                        </div>
                                        <div class="oe_journal_data">
                                            <div>
                                                <i class="fa fa-clock-o" title="Overdue Invoices till today" style="color:red">
                                                    <span t-esc="dashboard.overdue_invoice_amount"/>
                                                    <span t-esc="dashboard.currency_symbol"/>
                                                </i>
                                            </div>
                                            <div>
                                                <i class="fa fa-clock-o" title="Overdue Invoices till the end of this month" style="color:#ee7700;">
                                                    <span t-esc="dashboard.overdue_invoice_amount_month"/>
                                                    <span t-esc="dashboard.currency_symbol"/>
                                                </i>
                                            </div>
                                        </div>
                                    </div>
<!--                                     <div class="col-md-3">
                                        <div class="oe_journal_title">
                                            <p t-if="journal_type == 'sale' or journal_type == 'purchase'"><a type="object" name="open_action" context="{'search_default_state':'paid'}">Paid</a></p>
                                        </div>
                                        <div class="oe_journal_data">
                                            <span t-esc="dashboard.paid_invoice_amount"/>
                                            <span t-esc="dashboard.currency_symbol"/>
                                        </div>
                                    </div> -->
                                    <div class="col-md-4">
                                        <div class="oe_journal_title">
                                            <p t-if="journal_type == 'sale'"><a t-attf-href="{dashboard.open_action}" type="object" name="open_action" context="{'search_default_state':'open'}">Receivable</a></p>
                                            <p t-if="journal_type == 'purchase'"><a t-attf-href="{dashboard.open_action}" type="object" name="open_action" context="{'search_default_state':'open'}">Payable</a></p>
                                        </div>
                                        <div class="oe_journal_data">
                                            <span t-esc="dashboard.todo_payment_amount"/>
                                            <span t-esc="dashboard.currency_symbol"/>
                                        </div>
                                    </div>
                            </div>
                            <div t-if="journal_type == 'cash' or journal_type == 'bank'">
                                <div class="col-md-4">
                                    <div class="oe_journal_title">
                                        <p><a type="object" name="open_action" context="{'search_default_unreconciled':1,'view_mode':1,'action_name':'action_account_manual_reconcile'}">Reconciliation</a></p>
                                    </div>
                                    <div class="oe_journal_data">
                                        <span t-esc="dashboard.total_reconcile_amount"> Item(s) to Reconcile</span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="oe_journal_title">
                                        <p>Last Statement: </p>
                                        <a type="object" name="open_action"><p t-esc='dashboard.last_statement_date'/></a>
                                    </div>
                                    <div class="oe_journal_data">
                                        <span t-esc="dashboard.last_statement_amount"/>
                                        <span t-esc="dashboard.currency_symbol"/>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                        <div class="oe_journal_title">
                                            <p>Balance</p>
                                        </div>
                                        <div class="oe_journal_data">
                                            <span t-esc="dashboard.credit_account_balance"/>
                                            <span t-esc="dashboard.currency_symbol"/>
                                        </div>
                                </div>
                            </div>
                        </t>
                </templates>
                </kanban>
            </field>
        </record>

        <record id="view_account_journal_search_inherit" model="ir.ui.view">
            <field name="name">account.journal.search.inherit</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="view_account_journal_search"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="before">
                    <filter string="Follower" name="dashboard_follower" domain="[('members', '=', uid)]"/>
                    <filter domain="[('dashboard_star', '=', True)]" string="Favorite" name="dashboard_favorite" context="{}"/>
                </xpath>
            </field>
        </record>
        
        <record id="open_account_journal_kanban" model="ir.actions.act_window">
            <field name="name">Journals</field>
            <field name="res_model">account.journal</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban</field>
            <field name="usage">menu</field>
            <field name="search_view_id" ref="view_account_journal_search_inherit"/>
            <field name="context">{'search_default_dashboard_follower':1, 'search_default_dashboard_favorite':1}</field>
            <field name="domain">[('type','not in',['general','situation','sale_refund','purchase_refund'])]</field>
            <field name="help" type="html">
                <p style="margin-left: -90px;">
                    To track activities in your bank accounts and analyse your sales and purchase journals, install the <a type="action" name="%(account.open_account_charts_modules)d" class="oe_link">chart of account matching your country</a> or <a type="action" name="%(account.action_account_configuration_installer)d" class="oe_link">configure the custom chart of accounts.</a>
                </p>
            </field>
        </record>

        <menuitem id="menu_finance_journal_board" name="Journals" parent="menu_finance" sequence="1"/>
        <menuitem id="menu_board_journal_1" name="Dashboard" action="open_account_journal_kanban" parent="menu_finance_journal_board" sequence="1"/>

    </data>
</openerp>
