<?xml version="1.0" encoding="UTF-8"?>

<templates>
    <t t-name="footNoteTextarea">
        <div class="mt32 mb32">
            <label t-att-for="'footnote' + footNoteSeqNum"><t t-esc="footNoteSeqNum"/></label>
            <textarea t-att-name="'footnote' + footNoteSeqNum" rows='4' class="form-control" placeholder="Insert foot note here"></textarea>
            <button class="btn btn-primary saveFootNote">Save</button>
        </div>
    </t>
    <t t-name="supFootNoteSeqNum">
         <sup><b><a t-att-href="'#footnote'+footNoteSeqNum"><t t-esc="footNoteSeqNum"/></a></b></sup>
    </t>
    <t t-name="savedFootNote"><p class="footnote" t-att-id="'footnote'+num"><t t-esc="num+'. '+note"/></p></t>
    <t t-name="foldable">
        <span style="position: absolute;" t-att-class="'foldable '+lineId"><i class="fa fa-caret-down"></i></span>
    </t>
    <t t-name="unfoldable">
        <span style="position: absolute;" t-att-class="'unfoldable '+lineId"><i class="fa fa-caret-right"></i></span>
    </t>
    <t t-name="pencilIcon">
        <span style="position: absolute;"><i class="fa fa-pencil-square"></i></span>
    </t>
    <t t-name="trashAndPencilIcon">
        <span style="position: absolute;"><i class="fa fa-pencil-square"></i><i class="fa fa-trash-o"></i> </span>
    </t>
    <t t-name="addSummary">
        <input type="submit" name="summary" class="btn btn-link" value="Add summary" />
    </t>
    <t t-name="editSummary">
        <label for="summary">Edit summary :</label>
        <textarea name="summary" rows='4' class="form-control"></textarea>
        <button class="btn btn-primary saveSummary">Save</button>
    </t>
    <t t-name="savedSummary">
        <span class="savedSummary"><t t-esc="summary" /></span>
    </t>
    <t t-name="editContent"><t t-if="num > 0"><t t-esc="num" />. </t><textarea t-att-name="edit" rows='4' class="form-control"><t t-esc="text" /></textarea><button class="btn btn-primary saveContent">Save</button></t>
    <t t-name="report_financial_line">
        <tr>
            <td>
                <a t-if="l.type == 'account_id'"><span style="font-style: italic; margin-left: 70px" t-att-class="l.type + ' ' + l.id"><t t-esc="l.name"/></span></a>
                <t t-if="l.type != 'account_id'"><span style="font-style: italic; margin-left: 70px"><t t-esc="l.name"/></span></t>
            </td>
            <td class="text-right annotable" style="white-space: nowrap;" t-if="o.debit_credit and !c.comparison">
                <span style="font-style: italic;"><t t-esc="l.debit"/></span>
            </td>
            <td class="text-right annotable" style="white-space: nowrap;" t-if="o.debit_credit and !c.comparison">
                <span style="font-style: italic;"><t t-esc="l.credit"/></span>
            </td>
            <td class="text-right annotable" style="white-space: nowrap;">
                <span style="font-style: italic;"><t t-esc="l.balance"/></span>
            </td>
            <td class="text-right annotable" style="white-space: nowrap;" t-if="c.comparison">
                <span style="font-style: italic;"><t t-esc="l.comparison"/></span>
            </td>
            <td class="text-right annotable" style="white-space: nowrap;" t-if="c.comparison">
                <span style="font-style: italic;"><t t-esc="l.comparison_pc"/></span>
            </td>
        </tr>
    </t>
</templates>
