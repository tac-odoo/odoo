<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_wcbarcode">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
            <div class="page">
                <div class="oe_structure"/>
                <div class="row">
                    <div class="col-xs-offset-4">
                         <table style="border:2px solid black;" height="300" width="300">
                            <tr>
                                <td class="text-center" style="padding-top:8px"><strong><span t-field="o.name"/></strong></td>
                            </tr>
                            <tr>
                                <td style="vertical-align: bottom;padding-bottom:16px;"><img t-att-src="'/report/barcode/?type=%s&amp;value= ID %s&amp;width=%s&amp;height=%s' %('Code128', o.id, 150, 40)"/></td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="oe_structure"/>
            </div>
        </t>
    </t>
</template>
</data>
</openerp>
